<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<Scene fx:id = "scene" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@style.css" fx:controller="minesweeper.Controller">
   <Pane fx:id="root"  >
      <children>
         <Pane fx:id="topBar" onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" >
            <Label fx:id="topBarLabel" text="Minesweeper"/>
            <Button fx:id="exitButton" text="x" onAction="#exit" prefHeight="25.0" prefWidth="25.0" />

         </Pane>
         <Pane fx:id="main" onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" >
            <GridPane fx:id="gridPane"/>
         </Pane>


      </children>
   </Pane>
</Scene>
